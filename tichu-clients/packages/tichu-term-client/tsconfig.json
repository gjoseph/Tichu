{
  "compilerOptions": {
    "target": "es2023", // when we had es2019, we left a comment to say that: Node doesn't understand nullish coalescing or optional chaining, so instruct ts to transpile
    "module": "commonjs",
    "lib": ["es2023", "dom"],
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "types": ["node", "fs-extra"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "exclude": ["node_modules", "lib", "templates", "**/ws-browser-wrapper"]
}
