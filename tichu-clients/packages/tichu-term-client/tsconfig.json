{
  "compilerOptions": {
    "target": "es2023",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2023", "dom"],
    "types": ["node", "fs-extra"],

    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,

    "outDir": "./lib",
    "rootDir": "./src"
  },
  "exclude": ["node_modules", "lib", "templates"]
}
