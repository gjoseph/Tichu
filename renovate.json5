{
  extends: ["config:base"],
  masterIssue: true,
  separateMinorPatch: true,
  separateMultipleMajor: true,
  automerge: false,
  automergeType: "pr",
  automergeStrategy: "merge-commit",
  rebaseWhen: "behind-base-branch",
  // Wait 2 days after a release to create PR/branches
  stabilityDays: 2,
  prCreation: "not-pending",
  // default is documented to be 0, but empirically it seems to be ~30 ?
  prConcurrentLimit: 0,
  // default is documented to be 0, but empirically it seems to be 2 ?
  prHourlyLimit: 0,
  labels: [
    "renovate-{{updateType}}",
    "renovate-{{depType}}",
    "renovate-{{datasource}}",
  ],
  packageRules: [
    // Auto-merge patch updates
    {
      updateTypes: ["patch"],
      automerge: true,
    },
    // Don't try to update/lookup self:
    {
      packagePatterns: ["^net.incongru.tichu"],
      enabled: false,
    },
    // Java packages rules:
    {
      packagePatterns: ["^org.slf4j"],
      groupName: "SLF4J packages",
    },
    {
      packagePatterns: ["^org.apache.tomcat.embed"],
      groupName: "Tomcat packages",
    },
    {
      packagePatterns: ["^org.junit"],
      groupName: "JUnit packages",
    },
    {
      packagePatterns: ["^org.assertj"],
      groupName: "AssertJ packages",
    },
    {
      packagePatterns: ["^org.mockito"],
      groupName: "Mockito packages",
    },
    {
      packagePatterns: ["^net.javacrumbs.json-unit"],
      groupName: "JsonUnit packages",
    },
    {
      packagePatterns: ["^com.tngtech.archunit"],
      groupName: "ArchUnit packages",
    },
    // Generated @types rules
    {
      packagePatterns: ["@types/fs-extra", "fs-extra"],
      groupName: "fs-extra",
    },
    {
      packagePatterns: ["@types/node", "node"],
      groupName: "node",
    },
    {
      packagePatterns: ["@types/ws", "ws"],
      groupName: "ws",
    },
    {
      packagePatterns: ["@types/inquirer", "inquirer"],
      groupName: "inquirer",
    },
    {
      packagePatterns: ["@types/jest", "jest"],
      groupName: "jest",
    },
    {
      packagePatterns: ["@types/react", "react"],
      groupName: "react",
    },
    {
      packagePatterns: ["@types/react-dom", "react-dom"],
      groupName: "react-dom",
    },
    // Bans:
    {
      // https://github.com/npm/cli/issues/3948
      matchPackageNames: ["npm"],
      allowedVersions: "!/7.24.2/",
    },
  ],
}
